body
	background #eff2e7
	font-family "Sans-Serif" "Comic Sans MS"
	font-size 16px
img
	vertical-align top


//Decoration
.sub-border
		background red
		width 200px
		height 5px
		border-radius  0 .5em 0 0
.border-bottom-red-1
		border-bottom 1px solid red
.border-bottom-red-2
		border-bottom 2px solid red
.border-top-white-1
		border-top 1px solid white
.border-top-white-2
		border-top 2px solid white
.font-weight-bold
		font-weight bold
.font-shadow-black
		text-shadow 1px 1px 7px black
.box-shadow-white
		box-shadow 1px 1px 5px white
.box-shadow-black
		box-shadow 1px 1px 5px black
.top-25
		top 25%
.right-0
		right 0%
.padding-2
		padding .25em
.padding-up-down
		padding .5em 0
.padding-up-down-1
		padding 1em 0
.padding-up-down-2
		padding 2.5em 0
.padding-left-right-2
		padding 0 .25em
//Web Header
.main-header
		position absolute
		top 0
		width 100%
		z-index 100
		background rgba(black, .3)
		padding .5em
		display flex
		justify-content space-between
		align-items center
		&-logo
				.material-placeholder
						>img
								height 40px
								width 40px
						    border-radius 50%
						    border 2px solid white
						    box-shadow 1px 1px 5px black
						    background-color white
		&-title
				>h1
						font-size 1.5em
// Web Footer
.footer-logo
		display flex
		justify-content center
		margin 1em 0
		height 120px
		img
				width 250px
//Carousel
.slider
		.slides
				li
						.caption
								top 75%
.indicators
		z-index 100

.slider
		.indicators
				bottom 1%
.caption
		>h3
				font-size 1.3em
		>h5
				font-size 1em
//Menu Section
.item
		&-content
			>img
					width 250px
					height 250px


//Menu NS
.bar-sn
		border-top 1px solid #c2e1f5
		border-bottom 1px solid #c2e1f5
		border-right 1px solid #c2e1f5
		left -70px
		border-radius 0 .5em .5em 0
		transition .3s
		height 350px
		&:hover
				left 0
.bar-system
		border-top 1px solid #c2e1f5
		border-bottom 1px solid #c2e1f5
		border-left 1px solid #c2e1f5
		right -70px
		height auto
		border-radius .5em 0 0 .5em
		transition .3s
		top 35%
		&:hover
				right 0
.menu
		position fixed
		box-shadow 2px 3px 16px #000000
		z-index 100
		transition all 0.3s ease

		overflow-y auto
		&::-webkit-scrollbar
			display  none
		>a
				display block
				width 100%
				text-align center
				padding .5em

				>img
						border 1px solid white
						background white
						overflow hidden
						border-radius 50%
						width 64px
						height 64px
						transition all 0.3s ease
						box-shadow 1px 1px 5px white
				&:hover
					>img
						box-shadow 1px 1px 5px gold
						border 1px solid gold
						transform scale(1.2)	rotate(360deg)

//Paralax Philosophy
.blank
		background rgba(black, .3)
		height 20px
		width 100%
.inside-styles
		border-radius .5em
		background rgba(black, .2)
		padding .5em
		position absolute
		top 50%
		left 50%
		width 320px
		transform translate(-50%,-50%)

//Post

@media (min-width: 576px)
		.caption
				>h3
						font-size 2.2em
				>h5
						font-size 1.5em
		.inside-styles
				width 600px
		.main-header
				&-title
						>h1
								font-size 2.7em
				&-logo
						.material-placeholder
								>img
										height 95px
										width 95px
@media (min-width: 992px)
		.post
				height 600px
